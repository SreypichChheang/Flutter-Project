rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Only the user can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // OTP resets: allow write for sendOtp and resetPassword
    match /password_resets/{email} {
      allow create, update, delete: if true; // for Cloud Functions only
      allow read: if false; // clients should never read OTPs
    }
  }
}
